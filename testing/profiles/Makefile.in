include $(topsrcdir)/config/rules.mk

PROFILE_FILES = \
  prefs_general.js \
  prefs_b2g_unittest.js \
  webapps_mochitest.json \
  $(NULL)

_DEST_DIR_MOCHITEST = $(DEPTH)/_tests/testing/mochitest/profile_data
_DEST_DIR_WPT = $(DEPTH)/_tests/web-platform-tests/prefs
libs:: $(PROFILE_FILES)
	$(PYTHON) $(topsrcdir)/config/nsinstall.py $^ $(_DEST_DIR_MOCHITEST)
	$(PYTHON) $(topsrcdir)/config/nsinstall.py $^ $(_DEST_DIR_WPT)

stage-package: PKG_STAGE = $(DIST)/test-package-stage
stage-package:
	$(NSINSTALL) -D $(PKG_STAGE)/
	@(cd $(srcdir) && tar $(TAR_CREATE_FLAGS) - $(PROFILE_FILES)) | (cd $(PKG_STAGE)/mochitest/profile_data && tar -xf -)
	@(cd $(srcdir) && tar $(TAR_CREATE_FLAGS) - $(PROFILE_FILES)) | (cd $(PKG_STAGE)/web-platform-tests/prefs && tar -xf -)
